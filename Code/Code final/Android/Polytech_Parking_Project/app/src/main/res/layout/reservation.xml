<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="false" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/vous_avez_s_lectionn"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/Name_parking_reserve"
        android:background="#12c6ea"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Nom_parking_reserve"
        android:id="@+id/Name_parking_reserve"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUITTER"
        android:id="@+id/button_confirmer"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_enabled"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/Name_parking_reserve"
        android:layout_centerHorizontal="true" />

</RelativeLayout>